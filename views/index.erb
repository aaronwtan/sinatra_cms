<ul>
  <% @files.each do |file| %>
    <li>
      <a href="/<%= file %>"><%= file %></a>
      <form class="inline" action="/<%= file %>/edit" method="get">
        <button class="edit icon" type="submit">edit</button>
      </form>
      <form class="inline" action="/<%= file %>/copy" method="post">
        <button class="copy icon" type="submit">copy</button>
      </form>
      <form class="inline delete icon" action="/<%= file %>/delete" method="post">
        <button class="delete icon" type="submit">delete</button>
      </form>
    </li>
  <% end %>
</ul>

<p><a href="/new">New Document</a></p>

<% if session[:username] %>
  <form action="/users/signout" method="post">
    <p class="user-status">
      Signed in as <%= display_name %>.
      <button type="submit">SIGN OUT</button>
    </p>
  </form>
<% else %>
  <footer>
    <p class="user-status"><a href="/users/signin">SIGN IN</a></p>
    <p class="user-status">Need an account? <a href="/users/signup">SIGN UP</a></p>
  </footer>
<% end %>